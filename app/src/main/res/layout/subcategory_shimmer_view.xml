<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View

        android:id="@+id/img_banner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"


        android:background="@drawable/shimmershape" />
    <View

        android:id="@+id/bannerArea"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp"

        android:layout_below="@+id/img_banner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_120sdp"


        android:background="@drawable/shimmershape" />

    <View
        android:id="@+id/itemNameArea"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"

        android:layout_below="@+id/bannerArea"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_25sdp"


        android:background="@drawable/shimmershape" />



    <View
        android:id="@+id/whereArea"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"

        android:layout_below="@+id/itemNameArea"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"


        android:background="@drawable/shimmershape" />
    <View

        android:id="@+id/homearea"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"

        android:layout_below="@+id/whereArea"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"


        android:background="@drawable/shimmershape" />

    <View
android:layout_below="@+id/homearea"
        android:id="@+id/maparea"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"


        android:layout_width="wrap_content"
        android:layout_height="@dimen/_80sdp"


        android:background="@drawable/shimmershape" />



</RelativeLayout>

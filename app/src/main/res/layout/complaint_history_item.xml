<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:minHeight="@dimen/_90sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.view.MTextView
                android:id="@+id/categoryTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp"
                app:customTypeFace="@string/systemSemiBold" />

            <com.view.MTextView

                android:id="@+id/decriptionTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="#808080"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/systemRegular" />


            <com.view.MTextView

                android:id="@+id/cityTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="#808080"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/systemRegular" />

            <com.view.MTextView

                android:id="@+id/statusTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/systemMediumFont" />

            <com.view.MTextView
                android:visibility="gone"

                android:id="@+id/adminCommentTxt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="@color/blue"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/systemMediumFont" />

            <com.view.MTextView
                android:id="@+id/dateTxt"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center|start"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text=""
                android:textAlignment="viewStart"
                android:textColor="#808080"
                android:textSize="@dimen/_14ssp"
                app:customTypeFace="@string/systemRegular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="end"
                android:orientation="horizontal">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/feedbackLinkImg"
                    android:layout_width="@dimen/_30sdp"

                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_shape"
                    android:padding="@dimen/_6sdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_feedback_new" />

                <ImageView
                    android:backgroundTint="@color/appThemeColor_1"
                    android:id="@+id/cameraLinkImg"
                    android:layout_width="@dimen/_30sdp"

                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_shape"
                    android:padding="@dimen/_6sdp"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_gallery" />

                <ImageView
                    android:backgroundTint="@color/appThemeColor_1"
                    android:id="@+id/videoLinkImg"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"

                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_shape"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/white"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_video" />

                <ImageView
                    android:backgroundTint="@color/appThemeColor_1"
                    android:id="@+id/audioLinkImg"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/round_shape"
                    android:padding="@dimen/_5sdp"
                    android:tint="@color/white"
                    android:visibility="visible"
                    app:srcCompat="@drawable/ic_mic" />


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
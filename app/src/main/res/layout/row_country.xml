<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativelayout_rowcountry"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="?rowBackgroundColor"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageview_flag"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:scaleType="fitXY"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_alignTop="@+id/imageview_flag"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@+id/textview_code"
        android:layout_toEndOf="@+id/imageview_flag"
        android:ellipsize="end"
        android:gravity="start"
        android:text="Country Sample"
        android:textAlignment="viewStart"
        android:textAppearance="@style/CountryTextStyle" />

    <TextView
        android:id="@+id/textview_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageview_flag"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:text="+123"
        android:textAppearance="@style/DialCodeTextStyle"
        android:textDirection="ltr" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@color/gray" />
</RelativeLayout>
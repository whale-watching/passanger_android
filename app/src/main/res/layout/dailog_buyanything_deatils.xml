<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#605E60"
    android:gravity="bottom"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/_minus10sdp"
        app:cardBackgroundColor="#ffffff"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="vertical">

            <com.view.MTextView
                android:id="@+id/howItworksTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:maxLines="1"
                android:text="How It Works?"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp"
                app:customTypeFace="@string/systemMediumFont" />
            <com.google.android.flexbox.FlexboxLayout
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



                <ImageView
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:tint="@color/appThemeColor_1"
                    app:srcCompat="@drawable/dot"
                    android:id="@+id/imagecar"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp" />


                <WebView
                    android:includeFontPadding="false"
                    android:id="@+id/actionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Select a store"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                   />

                <com.view.MTextView
                    android:visibility="gone"
                    android:includeFontPadding="false"
                    android:id="@+id/actionDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:gravity="start"
                    android:text="for items you want to buy"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/systemRegular" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:visibility="gone"
                app:flexDirection="row"
                app:flexWrap="wrap"
                android:layout_marginTop="@dimen/_15sdp"
                app:justifyContent="flex_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    app:layout_alignSelf="flex_start"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/dot"
                    android:tint="@color/appThemeColor_1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/imagecar2"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp" />

                <com.view.MTextView

                    android:includeFontPadding="false"
                    android:id="@+id/actionTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Make a list of items and place order"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/systemSemiBold" />

                <com.view.MTextView
                    android:includeFontPadding="false"
                    android:id="@+id/actionDescription2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:gravity="start"
                    android:text="witout any payment"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/systemRegular" />
            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:visibility="gone"
                app:flexDirection="row"
                app:flexWrap="wrap"
                android:layout_marginTop="@dimen/_15sdp"
                app:justifyContent="flex_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_marginTop="@dimen/_3sdp"
                    android:src="@drawable/dot"
                    android:tint="@color/appThemeColor_1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/imagecar3"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp" />

                <com.view.MTextView
                    android:includeFontPadding="false"
                    android:id="@+id/actionTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Pay after you confirm item images"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/systemSemiBold" />

                <com.view.MTextView
                    android:id="@+id/actionDescription3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:gravity="start"
                    android:text="sent by our delivery partner"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13ssp"
                    app:customTypeFace="@string/systemRegular" />
            </com.google.android.flexbox.FlexboxLayout>

            <LinearLayout
                android:id="@+id/bottomview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_weight="0"
                android:background="@drawable/btn_border"
                android:padding="@dimen/_2sdp">

                <include
                    android:id="@+id/btn_type2"
                    layout="@layout/btn_type_1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/all_btn_height"
                    android:layout_gravity="bottom" />

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>


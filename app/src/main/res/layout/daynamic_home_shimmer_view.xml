<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <View


        android:id="@+id/img_banner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"


        android:background="@drawable/shimmershape" />

    <LinearLayout
        android:id="@+id/userArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_banner"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/_35sdp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"

            android:layout_below="@+id/img_banner"
            android:layout_gravity="center"


            android:layout_marginTop="@dimen/_10sdp"

            android:background="@drawable/shimmershape"

            />

        <View
            android:visibility="gone"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_15sdp"

            android:layout_below="@+id/img_banner"
            android:layout_gravity="center"


            android:layout_marginTop="@dimen/_5sdp"

            android:background="@drawable/shimmershape"

            />

        <View
            android:visibility="gone"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_15sdp"

            android:layout_below="@+id/img_banner"
            android:layout_gravity="center"


            android:layout_marginTop="@dimen/_5sdp"

            android:background="@drawable/shimmershape"

            />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/itemArea1"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userArea"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:orientation="vertical">


            <View
                android:layout_width="@dimen/_80sdp"

                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/img_banner"


                android:layout_marginTop="@dimen/_5sdp"

                android:background="@drawable/shimmershape"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <View
                android:layout_width="@dimen/_80sdp"

                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/img_banner"


                android:layout_marginTop="@dimen/_5sdp"

                android:background="@drawable/shimmershape"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <View
                android:layout_width="@dimen/_80sdp"

                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/img_banner"


                android:layout_marginTop="@dimen/_5sdp"

                android:background="@drawable/shimmershape"

                />
        </LinearLayout>
    </LinearLayout>



    <View
        android:id="@+id/bannerArea1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/itemArea1"

        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_10sdp"


        android:background="@drawable/shimmershape" />

    <View

        android:id="@+id/bannerArea2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/bannerArea1"

        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"


        android:background="@drawable/shimmershape" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:layout_below="@+id/bannerArea2"
        android:layout_marginStart="@dimen/_10sdp"


        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"


        android:background="@drawable/shimmershape" />


</RelativeLayout>

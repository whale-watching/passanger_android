<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_110sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_3sdp"

        android:layout_marginEnd="@dimen/_3sdp"

        android:clickable="true"
        android:focusable="true">

        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingEnd="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/categoryArea"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:layout_margin="1dp"
                android:clipChildren="true"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingEnd="-10dp">

                <ImageView
                    android:id="@+id/categoryBG"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:scaleType="fitXY" />

                <com.view.MTextView
                    android:id="@+id/categoryTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:clickable="false"
                    android:gravity="start|center"
                    android:includeFontPadding="false"
                    android:text="Taxi"
                    android:textAlignment="viewStart"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp"
                    app:customTypeFace="@string/systemBold" />

                <ImageView
                    android:id="@+id/categoryImgView"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|bottom"
                    android:layout_marginEnd="@dimen/_minus10sdp"
                    android:layout_marginBottom="@dimen/_minus5sdp"
                    android:clickable="false"
                    android:elevation="@dimen/_2sdp"
                    android:focusable="true"
                    android:src="@drawable/ic_launcher" />

                <ImageView
                    android:id="@+id/categoryRTLImgView"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center|bottom"
                    android:layout_marginStart="@dimen/_minus10sdp"
                    android:layout_marginBottom="@dimen/_minus5sdp"
                    android:clickable="false"
                    android:elevation="@dimen/_2sdp"
                    android:focusable="true"
                    android:src="@drawable/ic_launcher"
                    android:visibility="gone" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>